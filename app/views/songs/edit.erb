<h2>Edit Song</h2>

<form action='/songs/<%= @song.slug %>' method='POST'>
  <input type='hidden' name='_method' value='PATCH'>
    <label>Name: </label>
    <input type='text' name='song[name]' id='song_name' value='<%=@song.name>'></br>
    <label>Artist: </label>
    <input type='text' name='artist[name]' id='artist_name' value='<%=@song.artist.name%>'></br>
    <% Genre.all.each do |genre| %>
      <label>Genre: </label>
      <input type='checkbox' name='genres[]' value='<%= genre.id %>' id='<%= genre.name %>' <%='checked' if @song.genres.include?(genre) %>>
      <% end %>
  <input type='submit' value="Update">

  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
</form>
